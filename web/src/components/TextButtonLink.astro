---
interface Props {
  href: string;
}
const { href } = Astro.props;
---

<a href={href} class="textbutton">
  <slot />
</a>

<style>
  .textbutton {
    display: block;
    padding: 10px 16px;
    color: var(--color-primary);
    text-decoration: none;
    border-radius: 1000px;
    position: relative;
    overflow: hidden;
  }

  .textbutton::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-primary);
    opacity: 0;
    transition: opacity 0.1s ease-in-out;
    pointer-events: none;
  }

  .textbutton:hover::before {
    opacity: 0.08;
  }

  .textbutton:active::before {
    opacity: 0.18;
  }

  .textbutton:focus-visible::before {
    opacity: 0.1;
  }
</style>
